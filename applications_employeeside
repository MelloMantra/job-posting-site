  <script>
    gsap.registerPlugin(ScrollTrigger);

    // Initial loading animation
    gsap.to('.loading-bar', {
      width: '100%',
      duration: 1.5,
      ease: 'power2.inOut'
    });

    // Animate header
    gsap.to('h1', {
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.5,
      ease: 'power3.out'
    });

    // Animate stat cards
    gsap.to('.stat-card', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.2,
      delay: 0.8,
      ease: 'power3.out'
    });

    // Animate application cards
    gsap.to('.application-card', {
      opacity: 1,
      x: 0,
      duration: 0.8,
      stagger: 0.15,
      delay: 1.2,
      ease: 'power3.out'
    });

    // Scroll animations
    gsap.utils.toArray('.application-card').forEach((card, i) => {
      ScrollTrigger.create({
        trigger: card,
        start: 'top bottom-=100',
        onEnter: () => {
          gsap.to(card, {
            opacity: 1,
            x: 0,
            duration: 0.8,
            delay: i * 0.1
          });
        }
      });
    });

    // Add hover effect to stat cards
    document.querySelectorAll('.stat-card').forEach(card => {
      card.addEventListener('mouseenter', () => {
        gsap.to(card, {
          scale: 1.05,
          duration: 0.3,
          ease: 'power2.out'
        });
      });

      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          scale: 1,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    });

    // Confetti animation for accepted applications
    document.querySelectorAll('.application-card').forEach(card => {
      if (card.querySelector('.status-accepted')) {
        let confettiRunning = false;
        
        card.addEventListener('mouseenter', () => {
          if (!confettiRunning) {
            confettiRunning = true;

            // Sky-wide confetti effect
            const duration = 2000;
            const animationEnd = Date.now() + duration;
            const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

            const interval = setInterval(() => {
              const timeLeft = animationEnd - Date.now();

              if (timeLeft <= 0) {
                confettiRunning = false;
                return clearInterval(interval);
              }

              const particleCount = 50 * (timeLeft / duration);

              // Confetti burst from the sky
              confetti(Object.assign({}, defaults, {
                particleCount,
                origin: {
                  x: Math.random(),
                  y: -0.1
                },
                gravity: 0.6,
              }));
            }, 250);
          }
        });
      }
    });

    // Random highlight animation for pending applications
    setInterval(() => {
      const pendingCards = document.querySelectorAll('.status-pending');
      const randomCard = pendingCards[Math.floor(Math.random() * pendingCards.length)];
      randomCard.classList.add('highlight');
      setTimeout(() => {
        randomCard.classList.remove('highlight');
      }, 2000);
    }, 4000);
  </script>
</body>
