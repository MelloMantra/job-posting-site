      margin-bottom: 4rem;
    }

    h1 {
      font-size: 3.5rem;
      font-weight: 800;
      letter-spacing: -2px;
      margin-bottom: 1rem;
      opacity: 0;
      transform: translateY(30px);
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-bottom: 4rem;
    }

    .stat-card {
      background: #161616;
      padding: 2rem;
      border-radius: 15px;
      opacity: 0;
      transform: translateY(30px);
    }

    .stat-number {
      font-size: 2.5rem;
